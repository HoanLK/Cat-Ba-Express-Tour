@{
    ViewBag.Title = "Cát Bà Express Tour";
}

<!--Trang chủ-->
<section class="trangchu row" ng-controller="homeController">
    <!--Sologan-->
    <p class="sologan col-xs-12 col-sm-12 col-md-12 col-lg-12">
        Phục vụ tốt nhất <br />
        <span>Tour du lịch khuyến mãi tốt nhất</span>
    </p>
    <!--Tour du lịch mới-->
    <article class="tourmoi col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <!--Tiêu đề-->
        <p class="tieude">Tour du lịch mới</p>
        <!--Danh sách tour-->
        <div class="cactour col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <!--Tour-->
            <div id="tour" class="tour col-xs-12 col-sm-6 col-md-4 col-lg-4" ng-repeat="(index, value) in spMois">
                <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive" />
                <div class="thongtin row">
                    <div class="text">
                        <div class="line">
                            <p class="nuoc">{{value.title}}</p>
                            <p class="thoigian">{{value.dateNumber}} Ngày</p>
                        </div>
                        <div class="line">
                            @*<p class="thanhpho">Grand turkey</p>*@
                            <p class="giatien">{{value.price | number:0}} vnđ</p>
                        </div>
                    </div>
                    <div class="xemthem">
                        <a href="/tour/{{value.alias}}-{{value.idProduct}}" id="xemthem" class="pull-right">Chi tiết</a>
                    </div>
                </div>
            </div>
        </div>
    </article>

    <!--Địa điểm đẹp-->
    <article class="diadiemdep-home col-xs-12 col-sm-12 col-md-12 col-lg-12">

        <!--Tiêu để-->
        <p class="tieude col-xs-12 col-sm-12 col-md-12 col-lg-12">
            Địa điểm đẹp
        </p>

        <!--Các địa điểm-->
        <div class="cacdiadiem col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <span us-spinner="{radius:15, width:4, length: 8}"></span>
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="diaDiemDeps.length > 0" style="color: #F44336; font-size: 2em; padding-left: 3em;">Đang cập nhật địa điểm đẹp</p>
            <div class="view view-sixth dd-1 col-xs-12 col-sm-12 " ng-class="{'col-md-6 col-lg-6':(index < 2 || index >= 5),'col-md-4 col-lg-4':(index >= 2 && index < 5)}" ng-repeat="(index, value) in diaDiemDeps" ng-show="diaDiemDeps.length > 0">
                <!--Desktop-->
                <div class="visible-md visible-lg">
                    <img ng-src="{{value.image}}" alt="{{value.title}}" ng-hide="index < 2||index >= 5" />
                    <img ng-src="{{value.imageNgang}}" alt="{{value.title}}" ng-show="index < 2||index >= 5" />
                    <div class="mask">
                        <h3>{{value.title}}</h3>
                        <p>{{value.description}}</p>
                        <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="info">Đọc tiếp</a>
                    </div>
                </div>
                <!--Mobile-->
                <div class="visible-xs">
                    <img ng-src="{{value.image}}" alt="{{value.title}}" />
                    <div class="mask">
                        <h3>{{value.title}}</h3>
                        <p>{{value.description}}</p>
                        <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="info">Đọc tiếp</a>
                    </div>
                </div>
                <!--Table-->
                <div class="visible-sm">
                    <img ng-src="{{value.imageNgang}}" alt="{{value.title}}" />
                    <div class="mask">
                        <h3>{{value.title}}</h3>
                        <p>{{value.description}}</p>
                        <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="info">Đọc tiếp</a>
                    </div>
                </div>
            </div>





