    <!--Menu desktop-->
    <script type="text/javascript">
        $(window).scroll(function () {

            var a = $('.desktop').height();
            var pos = $(window).scrollTop();
            if (pos > a) {
                $(".desktop").css({
                    background: '#337ab7',
                    transition: 'all .3s ease-in-out',
                    height: '4.3em',
                });
                $(".desktop").addClass('shadow');
                $('header > .menu > .desktop > .logo').css({
                    background: 'rgb(255,255,255)',
                    height: $('.desktop').height(),
                    padding: '0.3em 0',
                });
                $('#logo').css({
                    width: '5.5em',
                    margin: '0 0 0 8em',
                    transition: 'all .3s ease-in-out'
                });
                $('.menu-search').css({
                    top: '0em',
                    margin: '1em 0 0 0',
                    transition: 'all .3s ease-in-out',
                });

            }
            else {
                $(".desktop").css({
                    background: 'linear-gradient(to top,rgba(0,0,0,0) 0, rgba(0,0,0,.03) 12%, rgba(0,0,0,.16) 39%, rgba(0,0,0,.2) 51%, rgba(0,0,0,.3) 100%)'
                });
                $(".desktop").removeClass('shadow');
                $('header > .menu > .desktop > .logo').css({
                    background: 'transparent',
                    height: 'auto',
                });
                $('#logo').css({
                    width: '12em',
                    margin: '0 0 0 10em',
                });
                $('.menu-search').css({
                    top: '2.5em'
                });
            }
        });
    </script>

